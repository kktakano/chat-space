.body
  .flash-box
    .notice
      グループを作成しました

  .wrapper
    .chat-side
      .side-header
        .side-header__box
          .side-header__box__user-name
            name
          .side-header__box__menu
            .side-header__box__menu__new-group
              = link_to do
                = fa_icon 'edit', class:"fa fa-edit"
            .side-header__box__menu__edit-user
              = link_to do
                = fa_icon 'cog', class:"fa fa-cog"

      .groups
        = render "group"

  
    .chat-main
      .main-header
        .main-header__left-box
          .main-header__left-box__current-group
            current-group
          .main-header__left-box__member-list
            Member :
            .main-header__left-box__member-list__member
              name
        = link_to do
          .main-header__edit-btn
            Edit
          


      .messages
        = render "message"

      .form
        .new_message
          .input-box
            %input.input-box__text{placeholder: "type a message",type: "text"}
            %label.input-box__image
              = fa_icon'image'
              = file_field :image, id: "message_image"
          %input.submit-btn{type: "submit",value: "Send"}