.body

  .wrapper
    = render "side-bar"

  
    .chat-main
      .main-header
        .main-header__left-box
          .main-header__left-box__current-group
            current-group
          .main-header__left-box__member-list
            Member :
            .main-header__left-box__member-list__member
              name
        = link_to do
          .main-header__edit-btn
            Edit
          


      .messages
        = render "messages/message"

      .form
        .new_message
          .input-box
            %input.input-box__text{placeholder: "type a message",type: "text"}
            %label.input-box__image
              = fa_icon'image'
              = file_field :image, id: "message_image"
          %input.submit-btn{type: "submit",value: "Send"}